<h1> New Appearance </h1>
    <% if @appearance.errors.any? %>
        <p>There are errors</p>
        <ul>
         <% @appearance.errors.full_messages.each do |message| %>
            <li> <%= message %></li>
        </ul>
        <% end %>
    <% end %>


<%= form_for @appearance do |f| %>
    <%= f.label "Guest" %>
    <%= f.collection_select :guest_id, Guest.all, :id, :name %><br>
    <%= f.label "Date" %>
    <%= f.collection_select :episode_id, Episode.all, :id, :date %><br>
    <%= f.label "Rating" %>
    <%= f.number_field :rating %><br><br>
<%= f.submit %>
<% end %>